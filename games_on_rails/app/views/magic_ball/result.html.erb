<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Result</title>
  </head>
  <body>
    <%= form_tag(magic_ball_path, method: :get) do %>
      <%= text_field_tag :question, nil, placeholder: "Want to see the future?" %>
      <%= submit_tag "Ask Away" %>
    <% end %>
    <p>
      You asked: <%= params[:question] || "Nothing" %>
    </p>
    <% if params[:question].present? %>
    <%= image_tag "magic_ball.jpg" %>
    <h1>The Magic 8 Ball Says...</h1>
    <p>
      <%= @magic_answer %>
    </p>
    <% end %>
  </body>
</html>
